
  {% schema %}
{
  "name": "custom related",
  "settings": [
    {
      "id": "product_related_heading",
      "type": "text",
      "label": "The Coursel heading.",
      "default": "You may also like"
    },
    {
      "id": "product_card_color",
      "type": "text",
      "label": "Product card color",
      "default": "#f7f7f7"
    },
    {
      "id": "product_card_padding_bottom",
      "type": "number",
      "label": "Padding bottom of card in rems",
      "default": 1
    },
    {
      "id": "product_card_flex_gap",
      "type": "number",
      "label": "The spacing between the product cards in rems",
      "default": 2
    },
    {
      "id": "product_card_details_horizontal_padding",
      "type": "number",
      "label": "The horizontal paddig of the product details in rems",
      "default": 2
    },
    {
      "id": "product_card_heading_margin",
      "type": "number",
      "label": "Margin of the Header in rems",
      "default": 0
    },{
      "id": "product_card_border",
      "type": "text",
      "label": "Product card border (e.g, 1px solid transparent)",
      "default": "1px solid transparent"
    },{
      "id": "product_card_border_hover",
      "type": "text",
      "label": "Product card border (e.g, 1px solid black)",
      "default": "1px solid black"
    },{
      "id": "product_card_heading_font_weight",
      "type": "text",
      "label": "Font Weight for Product Title",
      "default": "600"
    }
  ],
  "templates": [
    "product"
  ]
}
{% endschema %}

{% style %}
  .carousel {
    margin: 1rem;
    position: relative;
    overflow: hidden;
    }

  .carousel-container {
    width: 100%;
		height: 100%;
    display: flex;
    list-style: none;
    overflow: scroll;
    scroll-behavior: smooth;
    gap: {{ section.settings.product_card_flex_gap }}rem;
    padding: 0;
  }
  .carousel-container {
      scrollbar-width: none;
      -ms-overflow-style: none;
  }
  .carousel-container::-webkit-scrollbar {
      width: 0;
      height: 0;
  }

  .slide-arrow {
    position: absolute;
    display: flex;
    top: 0;
    bottom: 0;
    margin: auto;
    height: 4rem;
    background-color: white;
    border: none;
    width: 2rem;
    font-size: 3rem;
    padding: 0;
    cursor: pointer;
    opacity: 0.5;
    transition: opacity 100ms;
  }
  .slide-arrow:hover,
  .slide-arrow:focus {
    opacity: 1;
  }
  .slide-arrow-prev {
    left: 0;
    padding-left: 0.25rem;
    border-radius: 0 2rem 2rem 0;
  }

  .slide-arrow-next {
    right: 0;
    padding-left: 0.75rem;
    border-radius: 2rem 0 0 2rem;
  }
  .product-card {
    display: flex;
    flex: 0 0 100%;
    justify-content: space-between;
    border: {{ section.settings.product_card_border }};
    background-color: {{ section.settings.product_card_color }};
    padding-bottom: {{ section.settings.product_card_padding_bottom }}rem;
  }
  .product-card a{
    text-decoration: none;
    color: inherit;
  }

  .product-card img{
    height: auto;
    width: 100%;
  }

  .product-card-details{
    padding-inline: {{ section.settings.product_card_details_horizontal_padding }}rem;
    display:flex;
    flex-direction:column;
  }

  .product-card-heading{
    margin:{{ section.settings.product_card_heading_margin }}rem;
    font-weight: {{ section.settings.product_card_heading_font_weight }};
  }

  .product-card:hover{
    border: {{ section.settings.product_card_border_hover }};
  }
  
  @media screen and (min-width: 768px) { 
    .product-card {
      flex: 1 0 50%;
    }
  }
  
  @media screen and (min-width: 1024px) { 
      .product-card{
        flex: 0 0 25%;
      }
  }

{% endstyle %}


<div class="related-products page-width" id="related-products">
  <h1>{{ section.settings.product_related_heading | escape }}</h1>
  <div class="container">
		<section class="carousel">
		  <button class="slide-arrow slide-arrow-prev" id="slide-arrow-prev">&#8249;</button>
		  <button class="slide-arrow slide-arrow-next" id="slide-arrow-next">&#8250;</button>
		  <ul class="carousel-container" id="carousel-container">

      </ul>
      </section>
      </div>
      </div>
</div>

{% javascript %}
const productRecommendationsSection = document.getElementById("carousel-container");
const prevButton = document.getElementById("slide-arrow-prev");
const nextButton = document.getElementById("slide-arrow-next");

fetch(window.Shopify.routes.root + `recommendations/products.json?product_id=${window.ShopifyAnalytics.meta.product.id}&intent=related`)
 .then(response => response.json())
 .then((res) => {
  if (res.products.length > 0) {
    res.products.forEach((el) => {
      createCard(el);
    }) 

    const ProductItem = document.querySelector(".product-card");
    nextButton.addEventListener("click", (event) => {
      const slideWidth = ProductItem.clientWidth;
      productRecommendationsSection.scrollLeft += slideWidth + 8;
    });
    
    prevButton.addEventListener("click", () => {
      const slideWidth = ProductItem.clientWidth;
      productRecommendationsSection.scrollLeft -= slideWidth + 8;
    });
  } else {
    document.getElementById("related-products").style.display = "none";
  }
 });

 function createCard(el) {
  if (el.images < 0) return
  const ProductCard = `
  <div class="product-card">
    <a class="card-link" href="${el.url}">
      <img src="${el.images[0]}" alt="" loading="lazy">
      <div class="product-card-details flow">
          <span>${el.type ? el.type : "N/A"}</span>
          <h3 class="product-card-heading">${el.title}</h3>
          <span class="product-card-price">$${el.price / 100}</span>
      </div>
    </a>
  </div>
  `;
  productRecommendationsSection.insertAdjacentHTML('beforeend', ProductCard);
 }
{% endjavascript %}